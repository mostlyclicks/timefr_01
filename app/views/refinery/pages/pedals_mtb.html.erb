<section id="pedal-atac-hero">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-8 col-md-4 col-md-offset-8" id="pedal-main-txt">
        <%= image_tag 'LOGO-ATAC-white.png', class: 'img-responsive' %>
        <%= raw @page.content_for(:hero_text) %>
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
            <%= image_tag 'PEDALS-mtb-atac-xc12.png', class: 'img-responsive' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<section id="pedals-atac-xc">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-lg-offet-1">
        <%= image_tag 'LOGO-ATAC-XC.png', class: 'img-responsive atac-logo' %>
      </div>
    </div>
    <% @mtb_pedals_xc.each do |xc| %>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-center">
      <%= image_tag xc.pedal_image.url, class: 'img-responsive' %>
      <h3><%= xc.name %> | <%= xc.weight %></h3>
      <small><%= xc.description.html_safe %></small>
    </div>
    <% end %>
  </div>
</section>

