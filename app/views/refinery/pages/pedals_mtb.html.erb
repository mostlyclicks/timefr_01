<section id="pedal-atac-hero">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-8 col-md-4 col-md-offset-8" id="pedal-main-txt">
        <%= image_tag 'LOGO-ATAC-white.png', class: 'img-responsive' %>
        <%= raw @page.content_for(:hero_text) %>
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
            <%= image_tag 'PEDALS-mtb-atac-xc12.png', class: 'img-responsive' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<section id="pedals-atac-xc">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-lg-offset-1">
        <%= image_tag 'LOGO-ATAC-XC.png', class: 'img-responsive atac-logo' %><br />
        <h3><%= copywriting('ATAC XC', {:scope => 'mtb-pedal-disciplines'}) %></h3>
      </div>
    </div>
    <% @mtb_pedals_xc.each do |xc| %>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-center">
      
        <%= link_to (image_tag xc.pedal_image.url, width: '100%', class: 'img-responsive'), xc.link %>
      
        <%#= image_tag xc.pedal_image.url, width: '100%', class: 'img-responsive' %>
      
      
      <h3>
        
          <%= link_to xc.name, xc.link %> | <%= xc.weight %></h3>
      <small><%= raw xc.description %></small>
    </div>
    <% end %>
  </div>
</section>

