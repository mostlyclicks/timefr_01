        <%= image_tag 'http://timefr-01.herokuapp.com/system/images/W1siZiIsIjIwMTYvMDUvMDQvMDIvMDUvMjIvMjk1L1BFREFMU19yb2FkX3hwcmVzczEyX2NvbXAucG5nIl0sWyJwIiwidGh1bWIiLCI1MDB4Il1d/PEDALS-road-xpress12-comp.png', class: 'img-responsive', alt: 'Road pedals', title: 'TIME XPRESSO 12 road racing pedals' %>
