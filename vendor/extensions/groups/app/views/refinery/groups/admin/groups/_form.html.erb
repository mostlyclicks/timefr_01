<%= form_for [refinery, :groups_admin, @group] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @group,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :shift_levers -%>
    <%= f.text_field :shift_levers -%>
  </div>

  <div class='field'>
    <%= f.label :brakes -%>
    <%= f.text_field :brakes -%>
  </div>

  <div class='field'>
    <%= f.label :front_derailleur -%>
    <%= f.text_field :front_derailleur -%>
  </div>

  <div class='field'>
    <%= f.label :rear_derailleur -%>
    <%= f.text_field :rear_derailleur -%>
  </div>

  <div class='field'>
    <%= f.label :crankset -%>
    <%= f.text_field :crankset -%>
  </div>

  <div class='field'>
    <%= f.label :cassette -%>
    <%= f.text_field :cassette -%>
  </div>

  <div class='field'>
    <%= f.label :chain -%>
    <%= f.text_field :chain -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.groups.admin.groups.group'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @group.name) -%>
<% end -%>
