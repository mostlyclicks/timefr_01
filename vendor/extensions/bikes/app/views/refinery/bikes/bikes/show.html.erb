<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bikes">
      <% @bikes.each do |bike| %>
        <li>
          <%= link_to bike.name, refinery.bikes_bike_path(bike) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>

<section id="l2-geometry">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <%= image_tag 'TIME-2015-geometry.png', class: 'img-responsive center-it' %>
      </div>
      <div class="col-lg-7">
        <% get_bike_geometry(@bike.name) %>
        <% @bike_geometry.each do |g| %>
        <h3><%= g.name %> Geometry</h3>
        <%= g.geometry_table.html_safe %>
        <% end %>
      </div>
    </div>
  </div>
</section>



<section id="groups">
<div class="container-fluid">
  <h1 class="text-center">Component Groups</h1>
  <div class="row">
    <% load_bike_group(@bike.name) %>
    <% @groups.each do |d| %>
      <div class="col-md-3 group">
        <table class="table table-striped table-bordered table-condensed">
            <col width="25%">
            <col width="75%">
          <tr>
            <th colspan="2"><%= d.name %></th>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Shift Levers', {:scope => 'groups'}) %></td>
            <td><%= d.shift_levers %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Brakes', {:scope => 'groups'}) %></td>
            <td><%= d.brakes %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Front Derailleur', {:scope => 'groups'}) %></td>
            <td><%= d.front_derailleur %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Rear Derailleur', {:scope => 'groups'}) %></td>
            <td><%= d.rear_derailleur %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Crankset', {:scope => 'groups'}) %></td>
            <td><%= d.crankset %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Cassette', {:scope => 'groups'}) %></td>
            <td><%= d.cassette %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Chain', {:scope => 'groups'}) %></td>
            <td><%= d.chain %></td>
          </tr>
          <tr>
            <td><%= copywriting('Comp Groups - Pedals', {:scope => 'groups'}) %></td>
            <td><%= d.pedals %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>

</section>
