
<style>
  #l2-bike {background-image:url(<%= @bike.hero_background.url %>);}
</style>

<!-- L2 BIKE INTRO -->
<section class="show" id="l2-bike">
  <div class="container">
    <%#= render '/refinery/content_page' %>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-8" id="bike-img">
        <%#= image_fu @bike.hero_image, '1200x765c', class: 'img-responsive' %>
        <%= image_tag @bike.hero_image.url, class: 'img-responsive2' %>
      </div>
      <div class="col-md-4 col-lg-4" id="bike-main-txt">
        <%= image_tag @bike.hero_logo.url, class: 'img-responsive' %>
        <%=raw @bike.hero_description %>
      </div>
    </div>
  </div>
</section>

<section id="bike-details">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-xs-12 text-center 
      <% if @bike.name == 'Skylon' %>
        col-md-offset-1
      <% else %>
        col-md-offset-0
      <% end %>
      ">

        <h2><%= @bike.weight %>g</h2>
        <small><%= copywriting('Bike Specs - Weight', {:scope => 'bike-specs'}) %></small>
      </div>
      <div class="col-md-2 col-xs-6 text-center">
        <span class="fa fa-bolt fa-3x" id="electrical"></span><span class="fa fa-cogs fa-3x"></span><br />
        <small><%= copywriting('Bike Specs - Elec/Mech', {:scope => 'bike-specs'}) %><!-- Electronic/Mechanical Compatible --></small>

      </div>

      <div class="col-md-2 col-xs-6 text-center">
        <span><%= image_tag 'translink.png', height: '42' %></span><br />
        <small><%= copywriting('Bike Specs - Translink', {:scope => 'bike-specs'}) %><!-- Translink Seatmast Option --></small>
      </div>

      <div class="col-md-2 col-xs-6 text-center">
        <span><%= image_tag 'AKTIV-LOGO-black.png', height: '42' %></span><br />
        <small><%= copywriting('Bike Specs - AKTIV', {:scope => 'bike-specs'}) %><!-- AKTIV Fork Option --></small>
      </div>
      <div class="col-md-2 col-xs-6 text-center">
        <span><%= image_tag 'gloss-matte-icon.png', height: '42' %></span><br />
        <small><%= copywriting('Bike Specs - Finishes', {:scope => 'bike-specs'}) %><!-- Finishes --></small>
      </div>
      <% unless @bike.name == 'Skylon' %>
      <div class="col-md-2 col-xs-6 text-center">
        <span><%= image_tag 'discbrake2.png', height: '42' %></span><br />
        <small><%= copywriting('Bike Specs - Disc Brakes', {:scope => 'bike-specs'}) %><!-- Disc Brake Option --></small>
      </div>
      <% end %>



    </div>
  </div>



</section>

<section id="l2-bike-gallery">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <h1 class="text-center"><%= @bike.name %> Gallery</h1>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @bike.colors.each_with_index do |color, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>" style="background-color:#cdcdcd;"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">

            <% @bike.colors.each_with_index do |color, index| %>

            <div class="item <% if index == 0 %>active<% end %>" >
              <%= image_tag color.image.url, alt: color.name, class: 'img-responsive gallery-img text-center', style: 'margin:0 auto;' %>
              <div class="carousel-caption" style="">
                <%= color.name %>
              </div>
            </div>
            <% end %>`
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="fa fa-chevron-left fa-2x"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="fa fa-chevron-right fa-2x"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="bike-features">
  <div class="container-fluid">
    <% @bike.bike_features.each_with_index do |bf, index| %>
    <div class="row">
      <%# if index % 2 > 0 %>
      <% if bf.left_right == 'right' %>
        <div class="col-sm-6 col-sm-push-6 feature-img"><%= image_tag bf.image.url, class: 'img-responsive' %></div>
        <div class="col-sm-6 col-sm-pull-6 feature-text right-text">
          <h1><%= bf.title %></h1>
          <small><%= bf.sub_title %></small>
          <p><%= bf.description %></p>
        </div>
      <% else %>
        <div class="col-sm-6 feature-img"><%= image_tag bf.image.url, class: 'img-responsive' %></div>
        <div class="col-sm-6 feature-text left-text">
          <h1><%= bf.title %></h1>
          <small><%= bf.sub_title %></small>
          <p><%= bf.description %></p>
        </div>
        
      <% end %>
    </div>
    <% end %>
  </div>
</section>

<section id="pre-aktiv">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= image_tag 'AKTIV-LOGO-white.png', width: '300px' %>
      <h3>All the good qualities of a stiff fork – precise steering, great braking performance and zero power loss – without bone-jarring, energy-sapping road vibrations.</h3>
      <h3><%= link_to 'Learn more about the AKTIV fork', '/technologies/aktiv' %></h3>
    </div>
  </div>
</div>
</section>

<section id="aktiv-canvas">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div id="aktiv-graphic"></div>
        <div id="aktiv-text"><p id="top-english">Tuned Mass Dampers <span class="fa fa-caret-right fa-2x"></span><br />
                  Stop vibrations</p>
                  <p>Batteur dynamique<br />Stoppe les vibrations</p></div>
      </div>
    </div>
  </div>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6">
      <canvas id="c"></canvas>
    </div>
    <div class="col-xs-6">
      <canvas id="d"></canvas>
    </div>
  </div>
</div>
</section>
 



