
<style>
  #l2-bike {background-image:url(<%= @bike.hero_background.url %>);}
</style>


<!-- L2 BIKE INTRO -->
<section class="show" id="l2-bike">
  <div class="container">
    <%#= render '/refinery/content_page' %>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-8" id="bike-img">
        <%#= image_fu @bike.hero_image, '1200x765c', class: 'img-responsive' %>
        <%= image_tag @bike.hero_image.url, class: 'img-responsive2' %>
      </div>
      <div class="col-md-4 col-lg-4" id="bike-main-txt">
        <%= image_tag @bike.hero_logo.url, class: 'img-responsive' %>
        <%=raw @bike.hero_description %>
      </div>
    </div>
  </div>
</section>


<!-- L2 AKTIV CHOICE -->
<section id="aktiv-choice">
  <div class="container-fluid">
    
    <div class="row">
      <div class="col-md-6">
        <%#= image_tag @bike.fork_standard_image.url, class: 'img-responsive' %>
        <div class="ac-desc"><%#= @bike.fork_standard.html_safe %></div>
      </div>
      <div class="col-md-6">
        <%#= image_tag @bike.fork_aktiv_image.url, class: 'img-responsive' %>
        <div class="ac-desc"><%= @bike.fork_aktiv.html_safe %></div>
      </div>
    </div>
  </div>

</section>









<% content_for :body_content_title do %>
  <%= @bike.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @bike.name %>
    </p>
  </section>
  <section>
    <h1>Hero Logo</h1>
    <p>
      <%= image_tag @bike.hero_logo.url, class: 'img-responsive' %>
    </p>
  </section>
  <section>
    <h1>Hero Image</h1>
    <p>
      <%= image_fu @bike.hero_image, nil %>
    </p>
  </section>
  <section>
    <h1>Hero Background</h1>
    <p>
      <%= image_fu @bike.hero_background, nil %>
    </p>
  </section>
  <section>
    <h1>Hero Description</h1>
    <p>
      <%=raw @bike.hero_description %>
    </p>
  </section>
  <section>
    <h1>Fork Standard</h1>
    <p>
      <%=raw @bike.fork_standard %>
    </p>
  </section>
  <section>
    <h1>Fork Standard Image</h1>
    <p>
      <%= image_fu @bike.fork_standard_image, nil %>
    </p>
  </section>
  <section>
    <h1>Fork Aktiv</h1>
    <p>
      <%=raw @bike.fork_aktiv %>
    </p>
  </section>
  <section>
    <h1>Fork Aktiv Image</h1>
    <p>
      <%= image_fu @bike.fork_aktiv_image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bikes">
      <% @bikes.each do |bike| %>
        <li>
          <%= link_to bike.name, refinery.bikes_bike_path(bike) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>

<section id="l2-geometry">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <%= image_tag 'TIME-2015-geometry.png', class: 'img-responsive center-it' %>
      </div>
      <div class="col-lg-7">

        

        <% get_bike_geometry(@bike.name) %>
          


        <% @bike_geometry.each do |g| %>
        <h3><%= g.name %></h3>
        <%= g.geometry_table.html_safe %>
        <% end %>
      </div>
    </div>
  </div>
</section>



<section id="groups">
<%# if @bike.name == 'Skylon' %>
  
<%# elsif @bike.name == 'Izon' %>

<%# else %>

<%# end %>

<div class="container">
  <h1 class="text-center">Component Groups</h1>
  <div class="row">
    <% @groups.each do |d| %>
      <div class="col-md-6 group">
        <table class="table table-striped table-bordered table-condensed">
            <col width="30%">
            <col width="70%">
          <tr>
            <th colspan="2"><%= d.name %></th>
          </tr>
          <tr>
            <td>Shift Levers</td>
            <td><%= d.shift_levers %></td>
          </tr>
          <tr>
            <td>Brakes</td>
            <td><%= d.brakes %></td>
          </tr>
          <tr>
            <td>Front Derailleur</td>
            <td><%= d.front_derailleur %></td>
          </tr>
          <tr>
            <td>Rear Derailleur</td>
            <td><%= d.rear_derailleur %></td>
          </tr>
          <tr>
            <td>Crankset</td>
            <td><%= d.crankset %></td>
          </tr>
          <tr>
            <td>Casssette</td>
            <td><%= d.cassette %></td>
          </tr>
          <tr>
            <td>Chain</td>
            <td><%= d.chain %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>

</section>
