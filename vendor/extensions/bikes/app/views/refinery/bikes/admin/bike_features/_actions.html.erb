<ul>
  <% if ::Refinery::Bikes::Admin::BikeFeaturesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bikes_admin_bike_features_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bikes_admin_bike_feature_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Bikes::Admin::BikeFeaturesController.sortable? && ::Refinery::Bikes::BikeFeature.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Bike Features"),
                 refinery.bikes_admin_bike_features_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Bike Features"),
                 refinery.bikes_admin_bike_features_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
