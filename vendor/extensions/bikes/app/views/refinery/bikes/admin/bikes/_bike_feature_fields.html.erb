<fieldset class='nested color-image' data-nested-item='true'>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :sub_title %>
    <%= f.text_field :sub_title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, cols: 28 %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= render 'refinery/admin/image_picker', f: f, field: :image_id, image: f.object.image %>
  </div>
  <%= link_to_remove_field 'Remove Bike Feature', f %>

</fieldset>