<ul>
  <% if ::Refinery::Bikes::Admin::ColorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bikes_admin_colors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bikes_admin_color_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Bikes::Admin::ColorsController.sortable? && ::Refinery::Bikes::Color.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Colors"),
                 refinery.bikes_admin_colors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Colors"),
                 refinery.bikes_admin_colors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
