<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(geometry) -%>">
  <span class='title'>
    <%= geometry.name %>

    <% if Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% geometry.translations.each do |translation| %>
          <% if translation.name.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_geometries_admin_geometry_path(geometry, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_geometries_admin_geometry_path(geometry),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.geometries_admin_geometry_path(geometry),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => geometry.name),
        :method => :delete %>
  </span>
</li>
