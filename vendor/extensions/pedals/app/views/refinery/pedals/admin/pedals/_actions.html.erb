<ul>
  <% if ::Refinery::Pedals::Admin::PedalsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pedals_admin_pedals_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_pedals_admin_pedal_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Pedals::Admin::PedalsController.sortable? && ::Refinery::Pedals::Pedal.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Pedals"),
                 refinery.pedals_admin_pedals_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Pedals"),
                 refinery.pedals_admin_pedals_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
