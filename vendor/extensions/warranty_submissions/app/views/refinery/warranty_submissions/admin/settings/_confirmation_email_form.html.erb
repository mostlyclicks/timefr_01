<%= form_for @setting, :url => refinery.warranty_submissions_admin_setting_path do |f| %>

  <p>
    <%= t('.explanation') %>
  </p>
  <p>
    <%= t('.below_edit_email_sent') %>
  </p>
  <table id='warranty_submission'>
    <tr>
      <td>
        <label class='stripped'><%= t('.to') %></label>
      </td>
      <td>
        <%= t('.the_customer_making_warranty_submission') %>
      </td>
    </tr>
    <tr>
      <td>
        <label class='stripped'><%= t('.from') %></label>
      </td>
      <td>
        <%= "#{Refinery::Core.site_name} &lt;no-reply@#{request.domain}&gt;".html_safe %>
      </td>
    </tr>
    <tr>
      <td>
        <label class='stripped'><%= t('.subject') %></label>
      </td>
      <td>
        <%= text_field_tag 'subject', Refinery::WarrantySubmissions::Setting.confirmation_subject,
                           :class => 'widest' %>
      </td>
    </tr>
    <tr>
      <td valign='top'>
        <%= f.label :value, t('.message'), :class => 'stripped' %>
      </td>
      <td>
        <%= f.text_area :value, :value => @setting.value, :rows => "7", :class => 'widest' %>
        <br/>
        <em><%= t('.note') %></em>
      </td>
    </tr>
  </table>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :cancel_url => refinery.warranty_submissions_admin_warranty_submissions_url,
             :hide_delete => true %>
<% end %>
