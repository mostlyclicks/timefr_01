<%= render 'refinery/admin/search_header', :url => refinery.warranty_submissions_admin_warranty_submissions_path %>
<% if searching? %>
  <% if @warranty_submissions.any? %>
    <ul>
      <%= render :partial => 'warranty_submission', :collection => @warranty_submissions %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_warranty_submissions.any? -%>
    <% @grouped_warranty_submissions.each do |container| %>
      <h3><%= l((warranty_submission_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'warranty_submission', :collection => warranty_submission_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_warranty_submissions', :scope => 'refinery.warranty_submissions.admin.warranty_submissions.index') %></strong>
    </p>
  <% end -%>
<% end %>
