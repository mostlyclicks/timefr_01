<section id="dist-top"></section>

<section id="dist-text">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%= @page.title %></h1>
        <%= raw @page.content_for(:body) %>
      </div>
      <div class="col-md-6">
        <!-- <h3>Dealers</h3>
        <p><%#= link_to 'FRANCE', '/fr/dealers-france' %> | <%#= link_to 'USA', '/dealers-us' %></p>
 -->
      </div>
    </div>
  </div>
</section>

<section id="dist-grid">
  <div class="container">
    <div class="row">
      <% @distributors.each do |d| %>
        <div class="col-md-4 col-sm-4 distributors">
          <h4><%= d.country.upcase %></h4>
          <strong><%= d.name.html_safe %></strong><br />
          <% if d.address.present? %><%= d.address.html_safe %><% end %>
          <% if d.telephone.present? %>TEL: <%= d.telephone %><br /><% end %>
          <!-- <%# if d.fax.present? %>FAX: <%#= d.fax %><%# end %> -->
        </div>
      <% end %>
    </div>
  </div>
</section>