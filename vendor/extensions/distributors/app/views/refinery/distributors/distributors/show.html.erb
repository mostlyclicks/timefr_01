<% content_for :body_content_title do %>
  <%= @distributor.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @distributor.name %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @distributor.address %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @distributor.country %>
    </p>
  </section>
  <section>
    <h1>Telephone</h1>
    <p>
      <%=raw @distributor.telephone %>
    </p>
  </section>
  <section>
    <h1>Fax</h1>
    <p>
      <%=raw @distributor.fax %>
    </p>
  </section>
  <section>
    <h1>Website</h1>
    <p>
      <%=raw @distributor.website %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @distributor.email %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="distributors">
      <% @distributors.each do |distributor| %>
        <li>
          <%= link_to distributor.name, refinery.distributors_distributor_path(distributor) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
