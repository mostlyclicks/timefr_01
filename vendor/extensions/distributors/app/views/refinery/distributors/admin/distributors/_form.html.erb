<%= form_for [refinery, :distributors_admin, @distributor] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @distributor,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:address],
                :object => "distributors/distributor" -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :telephone -%>
    <%= f.text_field :telephone -%>
  </div>

  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax -%>
  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.distributors.admin.distributors.distributor'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @distributor.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
