<% content_for :body do %>
  <div class='design_submissions'>
    <%#=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :design_submissions, @design_submission] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @design_submission,
                 :include_object_name => true  %>

      <div class='field name_field string_field'>
        <%= f.required_label :name %>
        <%= f.text_field :name %>
      </div>

      <div class='field email_field string_field'>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class='field street_address_field string_field'>
        <%= f.label :street_address %>
        <%= f.text_field :street_address %>
      </div>

      <div class='field city_field string_field'>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class='field state_field string_field'>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class='field zip_field string_field'>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </div>

      <div class='field country_field string_field'>
        <%= f.label :country %>
        <%= f.text_field :country %>
      </div>

      <div class='field phone_number_field string_field'>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </div>

      <div class='field design_description_field text_field'>
        <%= f.label :design_description %>
        <%= f.text_area :design_description, :rows => 8 %>
      </div>

      <div class='field design_image_field image_field'>
        <%= f.label :design_image %>
        <%= f.file_field :design_image %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
