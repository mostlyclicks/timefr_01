<div id='actions'>
  <ul>
    <% if ::Refinery::DesignSubmissions::Admin::DesignSubmissionsController.searchable? %>
      <li>
        <%= render '/refinery/admin/search', :url => refinery.design_submissions_admin_design_submissions_path %>
      </li>
    <% end %>
    <li <%= "class='selected'" if params[:action] == "index" %>>
      <%= link_to t('.inbox'), refinery.design_submissions_admin_design_submissions_path, :class => "email_icon" %>
    </li>
    <li>
      <%= link_to t('.update_notified'),
                    refinery.edit_design_submissions_admin_setting_path(:design_submission_notification_recipients, :dialog => true, :height => 300),
                    :class => "user_comment_icon" %>
    </li>
    <li>
      <%= link_to t('.edit_confirmation_email'),
                  refinery.edit_design_submissions_admin_setting_path(:design_submission_confirmation_body, :dialog => true),
                  :class => "edit_email_icon" %>
    </li>
  </ul>
</div>
