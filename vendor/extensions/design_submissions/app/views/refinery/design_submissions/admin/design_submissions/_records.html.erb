<%= render 'refinery/admin/search_header', :url => refinery.design_submissions_admin_design_submissions_path %>
<% if searching? %>
  <% if @design_submissions.any? %>
    <ul>
      <%= render :partial => 'design_submission', :collection => @design_submissions %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_design_submissions.any? -%>
    <% @grouped_design_submissions.each do |container| %>
      <h3><%= l((design_submission_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'design_submission', :collection => design_submission_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_design_submissions', :scope => 'refinery.design_submissions.admin.design_submissions.index') %></strong>
    </p>
  <% end -%>
<% end %>
