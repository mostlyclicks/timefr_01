<div id='records'>
  <h2><%= t('.design_submission') %></h2>
  <table id='design_submission' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.name', :default => t('activerecord.attributes.design_submission.name')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.design_submission.email')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.street_address', :default => t('activerecord.attributes.design_submission.street_address')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.street_address %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.city', :default => t('activerecord.attributes.design_submission.city')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.city %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.state', :default => t('activerecord.attributes.design_submission.state')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.state %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.zip', :default => t('activerecord.attributes.design_submission.zip')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.zip %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.country', :default => t('activerecord.attributes.design_submission.country')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.country %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.phone_number', :default => t('activerecord.attributes.design_submission.phone_number')) %>
          </strong>
        </td>
        <td>
          <%= @design_submission.phone_number %>
        </td>
      </tr>
      <tr>
        <td valign='top'>
          <strong>
            <%= t('.design_description', :default => t('activerecord.attributes.design_submission.design_description')) %>
          </strong>
        </td>
        <td>
          <p style='margin-top: 0px'>
            <% @design_submission.message.to_s.gsub("\r\n\r\n", "\r\n").split("\r\n").each_with_index do |sentence, index| %>
              <%=raw "</p><p>" unless index == 0 %>
              <%= sentence %>
            <% end %>
          </p>
        </td>
      </tr>
      <tr>
          <td>&nbsp;</td>
          <td>
            <strong>Terms and Conditions Agreement</strong><br />
            <% if @design_submission %>
              <% if @design_submission.agree_terms == true %>
                <%= "#{@design_submission.name} has agreed to the contest terms and conditions" %>
              <% else %>
                <%= "#{@design_submission.name} HAS NOT agreed to the contest terms and conditions" %>
              <% end %>
            <% end %>
          </td>
          

        </tr>
      <tr>
        <td>
          <strong>
            <%= t('.design_image', :default => t('activerecord.attributes.design_submission.design_image')) %>
          </strong>
        </td>
        <td>
          <% if @design_submission.design_image %>
            <%= image_tag @design_submission.design_image.url, style: "width:550px;" %>
          <% else %>
            <%= 'No image submitted' %>
          <% end %>
        </td>
        
      </tr>

      <tr>
        <td>
          <strong>
            <%= t('.design_image2', :default => t('activerecord.attributes.design_submission.design_image2')) %>
          </strong>
        </td>
        <td>
          <% if @design_submission.design_image2 %>
            <%= image_tag @design_submission.design_image2.url, style: "width:550px;" %>
          <% else %>
            <%= 'No image submitted' %>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>
            <%= t('.design_image3', :default => t('activerecord.attributes.design_submission.design_image3')) %>
          </strong>
        </td>
        <td>
          <% if @design_submission.design_image3 %>
            <%= image_tag @design_submission.design_image3.url, style: "width:550px;" %>
          <% else %>
            <%= 'No image submitted' %>
          <% end %>
        </td>
      </tr>

  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@design_submission.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_design_submissions'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.design_submissions.admin.design_submissions'),
                  refinery.design_submissions_admin_design_submission_path(@design_submission),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.design_submissions.admin.design_submissions'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @design_submission.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
