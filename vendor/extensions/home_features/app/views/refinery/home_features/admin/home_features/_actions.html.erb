<ul>
  <% if ::Refinery::HomeFeatures::Admin::HomeFeaturesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.home_features_admin_home_features_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_home_features_admin_home_feature_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::HomeFeatures::Admin::HomeFeaturesController.sortable? && ::Refinery::HomeFeatures::HomeFeature.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Home Features"),
                 refinery.home_features_admin_home_features_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Home Features"),
                 refinery.home_features_admin_home_features_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
